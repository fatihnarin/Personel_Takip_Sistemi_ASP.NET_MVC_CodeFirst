@model PDKS_Code_First.Entity.Departmanlar
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DEPARTMAN EKLE</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmanAdi, "Departman Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DepartmanAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartmanAdi, "", new { @class = "text-danger" })
            </div>
        </div>
        <font size="5" color="red" face="Arial"> @TempData["Warning"] </font>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="KAYDET" new {class="btn btn-default" , onclick="return confirm('Departman Bilgilerini Kaydetmek İstediğinize emin misiniz?')" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Geri Dön", "Listele")
</div>