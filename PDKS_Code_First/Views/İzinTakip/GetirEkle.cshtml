@model PDKS_Code_First.Classes.Class1.IzinTakipView
@{
    ViewBag.Title = "GetirEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Ekle", "İzinTakip", FormMethod.Post))
{
    <h2>Personel Özlük Güncelleme</h2>
    <br />

    <br />
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.PersonelId, "Personel Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.PersonelId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.PersonelId, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tc, "TC Kimlik No", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Tc, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ad, "Ad ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Soyad, "Soyad ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Departmanad, "Departman Adı ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Departmanad, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.talep, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.talep, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.talep, "", new { @class = "text-danger" })
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.talep</font>
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.tarih</font>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.bas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.bas, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.bas, "", new { @class = "text-danger" })
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.bas</font>
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.tarih</font>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.son, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.son, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.son, "", new { @class = "text-danger" })
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.son</font>
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.tarih</font>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tip, "İzin Tipi", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EnumDropDownListFor(model => model.tip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tip, "", new { @class = "text-danger" })
                <font size="2" color="red" face="Arial" class="text-danger"> @ViewBag.tip</font>
            </div>
        </div>
        <font size="4" color="red" face="Arial" class="text-danger"> @TempData["Warning"] </font>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">

                <button new {class="btn btn-success" , onclick="return confirm('Personel İzin Bilgilerini Kaydetmek İstediğinize emin misiniz?')">İZİN KAYDET</button>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Geri Dön", "EkleListe")
</div>
